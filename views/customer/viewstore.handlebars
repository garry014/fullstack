<div class="breadcrumb-area pt-35 pb-35 bg-gray-3">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <ul>
                <li>
                    <a href="/homecust">Home</a>
                </li>
                <li>
                    <a href="/viewshops">View Shops</a>
                </li>
                <li class="active">Ah Tong Tailor</li>
            </ul>
        </div>
    </div>
</div>
<div class="shop-area pt-95 pb-100">
    <div class="container">
        <div class="row flex-row-reverse">
            <div class="col-lg-12">
                <div class="shop-top-bar mb-35">
                    <div class="select-shoing-wrap">
                        <p>Showing 1â€“3 of 3 result(s)</p>
                    </div>
                    <div class="filter">
                        {{#ifCond user_status '!=' "tailor"}}
                        <a href=""><i class="pe-7s-chat"></i> Seek help from Ah Tong Tailor</a>
                        {{else}}
                        <a href="/tailor/addproduct" class="btn btn-light"><i class="fas fa-plus-square"></i> Add Product</a>
                        {{/ifCond}}
                    </div>
                </div>
                
                <div class="shop-bottom-area">
                    <div class="row">
                        <!--Start of Product List -->
                        {{#each shopprod}}
                        <div class="col-xl-4 col-md-6 col-lg-4 col-sm-6">
                            <div class="product-wrap mb-25 scroll-zoom">
                                <div class="product-img">
                                    <a href="/view/{{id}}">
                                        <img class="default-img" src="/uploads/products/{{image}}" alt="">
                                        <img class="hover-img" src="/uploads/products/1.jpg" alt="">
                                    </a>
                                    {{#ifCond discount '!=' 0}}
                                        <span class="pink">-{{discount}}%</span>
                                    {{/ifCond}}
                                    <div class="product-action">
                                        {{#ifCond ../user_status '==' "tailor"}}
                                            <div class="pro-same-action pro-quickview" style="width:50%;">
                                                <a href="/tailor/editproduct/{{id}}"><i class="fa fa-pencil"></i> Edit Item</a>
                                            </div>
                                            <div class="pro-same-action pro-wishlist" style="width:50%;">
                                                <a href="#myModal_{{id}}" data-toggle="modal" data-target="#myModal_{{id}}"><i class="fa fa-trash-o"></i> Delete</a>
                                            </div>
                                        {{/ifCond}}
                                        <div class="pro-same-action pro-cart" style="width:100%;">
                                            <a href="/view/{{id}}"><i class="fa fa-info"></i> View Item</a>
                                        </div>

                                    </div>
                                </div>
                                <div class="product-content text-center">
                                    <h3><a href="/view/{{id}}">{{name}}</a></h3>
                                    <div class="product-rating">
                                        <span class="fa fa-star" style="color: orange;"></span><span class="fa fa-star" style="color: orange;"></span><span class="fa fa-star" style="color: orange;"></span><span class="fa fa-star"></span><span class="fa fa-star"></span>
                                        3 stars
                                    </div>
                                    <div class="product-price">
                                        {{#ifCond discount '!=' 0}}
                                        <span>$ {{calculatedisc price discount}}</span>
                                        <span class="old">$ {{money2dp price}}</span>
                                        {{else}}
                                        <span>$ {{price}}</span>
                                        {{/ifCond}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>


                    <div class="pro-pagination-style text-center mt-30">
                        <ul>
                            <li><a class="prev" href="1"><i class="fa fa-angle-double-left"></i></a></li>
                            <li><a class="active" href="2">1</a></li>
                            <li><a href="">2</a></li>
                            <li><a class="next" href="2"><i class="fa fa-angle-double-right"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{#each shopprod}}
<!-- Delete Modal -->
<form action="/tailor/deleteProduct/{{id}}" style="display: inline-block;">
    <!-- The Modal -->
    <div class="modal" id="myModal_{{id}}">
      <div class="modal-dialog">
        <div class="modal-content">

          <!-- Modal Header -->
          <div class="modal-header">
                <h4 class="modal-title">Delete Confirmation</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>

          <!-- Modal body -->
          <div class="modal-body">
            Are you sure you want to delete {{name}}
          </div>

          <!-- Modal footer -->
          <div class="modal-footer">
           <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              <button type="submit" value="Delete" class="btn btn-danger">Delete</button>
          </div>

        </div>
      </div>
    </div>
</form>
{{/each}}

<script>
    window.onload = function(e){
      $('[for="qtybutton"]').css('display','none');
    }

    $.ajax({
        url: window.location.href,
        headers: {
            "Pragma": "no-cache",
            "Expires": -1,
            "Cache-Control": "no-cache"
        }
    }).done(function () {
        window.location.reload(true);
    });
</script>
