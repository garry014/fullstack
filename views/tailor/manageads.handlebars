<div class="cart-main-area pt-98 pb-100">
    <div class="container">
        <h3 class="cart-page-title">Your Advertisements</h3>
        {{!-- {{#if ads "==" ""}}
        <div>
          <p>You do not have any advertisements. <a href="/advertise">Click here to create.</a></p>

        </div>
        {{#else}}
        <div>
          <p>You do not have any advertisements. <a href="/advertise">Click here to create.</a></p>

        </div>
        <div>You have created your advertisement</div>
        {{/if}} --}}
        <div class="row justify-content-center">
            <div class="col-lg-15 col-md-15 col-sm-15 col-15">
                    <div class="table-content table-responsive cart-table-content">
                        <table>
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Store Name</th>
                                    <th>Start Date</th>
                                    <th>End Date</th>
                                    <th>Ad Text</th>
                                    {{!-- <th>Status</th> --}}
                                    <th>Action</th>
                                    {{!-- <th>Status</th>
                                    <th>action</th> --}}
                                </tr>
                            </thead>
                            <tbody>
                            {{#each ads}}
                                <tr>
                                <td class="ad-thumbnail">
                                   <img src="/uploads/advertisement/{{Image}}" alt=""style="width:auto;height:100px;">
                                </td>
                                <td class="product-name">
                                        {{storename}}
                                
                                </td>
                                <td class="product-price-cart">
                                        {{formatDate startDate 'DD MMM YYYY'}}
                                </td>
                                <td class="product-text">
                                   {{formatDate endDate 'DD MMM YYYY'}}
                                </td>
                                <td class="adText">
                                    {{adText}}
                                </td>
                                {{!-- <td class="product-subtotal">
                                    <p style="color:red; font-weight: bold;">Status</p>
                                    <p style="color:green;">Status</p>
                                    <p style="color:red">Status</p>
                                </td> --}}
                                <td class="product-remove">
                                    {{!-- <a href="/advertise"><i class="fa fa-pencil" title="Update this advertisement"></i></a>
                                    {{!-- {{#ifCond user.usertype '=='  "admin"}} --}}

                                        {{!-- <a href=""><i class="fa fa-check" title="Approve this advertisement"></i></a> --}}
                              
                                    <form action="/tailor/deleteads/{{id}}" method="POST" style="display: inline-block;">
                                        <button type="button" style="border:none; background: none; display: inline-block;" data-toggle="modal" data-target="#myModal"><i class="fa fa-times" style="color: red;" title="Delete this advertisement"></i></button>
                                        <!-- The Modal -->
                                        <div class="modal" id="myModal">
                                          <div class="modal-dialog">
                                            <div class="modal-content">

                                              <!-- Modal Header -->
                                              <div class="modal-header">
                                                <h4 class="modal-title">Delete Confirmation</h4>
                                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                              </div>
                                              

                                              <!-- Modal body -->
                                              <div class="modal-body">
                                                  <a href=""><img src="/uploads/advertisement/{{Image}}" alt=""style="width:auto;height:100px;"></a><br>
                                                Are you sure you want to delete  advertisement?
                                              </div>

                                              <!-- Modal footer -->
                                              <div class="modal-footer">
                                               <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                                  <button type="submit" value="Delete" class="btn btn-danger">Delete</button>
                                              </div>

                                            </div>
                                          </div>
                                        </div>
                                    </form>
                                {{!-- {{/ifCond}} --}}
                                </td>
                                </tr>
                            {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
           
            </div>
        </div>
    </div>
</div>
