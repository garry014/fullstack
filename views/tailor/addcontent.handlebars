
<div class="breadcrumb-area pt-35 pb-35 bg-gray-3">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <ul>
                <li>
                    <a href="index.html">Home</a>
                </li>
                <li class="active">Course Content</li>
            </ul>
        </div>
    </div>
</div>
<div class="contact-area pt-100 pb-100" >
    
    <div class="container" >
        
        <div class="custom-row-2" >

            <div class="col-lg-4 col-md-5" >
                <div class="contact-form" style="background-color: transparent; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);" >
                    <div class="contact-title mb-30" style="width: 200px; float: left; ">
                        <h2>Course Content</h2>
                        <h4></h4>
                    </div>
                    <div class="row" style="width: 200px;">


                        <br>
                        <ol>
                        {{#each videos}}
                            <li style="margin:1.5px;"><a href="/uploads/video/{{video}}">{{topic}}</a> &nbsp;&nbsp; <a href="/tailor/deletecontent/{{courseid}}/{{id}}"> <i class="fa fa-times" style="color: red; margin-top: 4px; float: right;"></i></a></li>  <!--id: topic-->
                        {{/each}}
                        </ol>
                    </div>

                </div>
            </div>

            <div class="col-lg-7 col-md-7">
                <div class="contact-form" style="background-color: transparent; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
                    <div class="contact-title mb-30">
                        <h2>Add Content </h2>
                        <h4>Video</h4>
                    </div>

                    <form class="contact-form-style" id="addcontent" action="/tailor/addcontent/{{id}}" method="post" enctype="multipart/form-data"> <!--//id: course -->
                        <div class="row">

                            <div class="col-lg-12">
                                Topic
                                <input name="topic" placeholder="Topic*" type="text" class="form-control" value="{{name}}" required>
                            </div>

                            <div class="col-lg-12">
                                Video
                                <input name="video" placeholder="Subject*" type="file" required>
                            </div>

                            <div class="button-box">
                                <button type="submit">Add Topic</button>  
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div> 
    </div>
</div> 
