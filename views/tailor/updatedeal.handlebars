<div class="login-register-area pt-100 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a data-toggle="tab" href="#lg2">
                            <h4> Update Flash Deal </h4>
                        </a>
                    </div>
                    <div id="lg2" class="tab-pane">
                        <div class="login-form-container">
                            <div class="billing-info-wrap">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <form action="/tailor/updatedeal/{{deals.id}}?_method=PUT" method="post"
                                            id="updatedeal">
                                            {{!-- <div class="form-group">
                                                <label for="name">Product Name</label>
                                                <select id="pname" name="pname" class="form-control" type="text"
                                                    value="{{deals.pname}}">
                                                    {{#each shopprod}}
                                                    <option>{{name}}</option>
                                                    {{/each}}
                                                </select>
                                                <br>
                                            </div> --}}
                                            <div class="billing-info mb-20">
                                                <label for="name">Product Name</label>
                                                <input id="pname" name="pname" class="form-control" type="text"
                                                    value="Altered Pants" readonly>
                                            </div>
                                            <br>
                                            <div class="billing-info mb-20">
                                                <label for="name">Discounted Price ($)</label>
                                                <input id="discountp" name="discountp" class="form-control" type="text"
                                                    value="{{deals.discountp}}">
                                            </div>
                                            <br>
                                            <div class="billing-info mb-20">
                                                <label for="name">Start Date</label>
                                                <input id="datepicker" name="dstartdate" class="form-control"
                                                    type="text" value="{{formatDate deals.dstartdate 'DD/MM/YYYY'}}">
                                            </div>
                                            <br>
                                            <div class="billing-info mb-20">
                                                <label for="name">End Date</label>
                                                <input id="datepicker2" name="dexpirydate" class="form-control"
                                                    type="text" value="{{formatDate deals.dexpirydate 'DD/MM/YYYY'}}">
                                            </div>
                                            <br>
                                            <div class="button-box">
                                                <button type="submit" class="btn btn-outline-info"
                                                    style="font-size: 14px; font-weight: 420; padding-top: 8px; padding-bottom: 8px;padding-left: 28px; padding-right: 28px"><span>Confirm</span></button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#datepicker').datepicker({
        format: 'dd/mm/yyyy',
        //value: new Date().toLocaleDateString('EN-SG'),
        uiLibrary: 'bootstrap4',
    });
    $('#datepicker2').datepicker({
        format: 'dd/mm/yyyy',
        //value: new Date().toLocaleDateString('EN-SG'),
        uiLibrary: 'bootstrap4',
    });
</script>
