<div class="login-register-area pt-100 pb-100">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-12 ml-auto mr-auto">
                <div class="login-register-wrapper">
                    <div class="login-register-tab-list nav">
                        <a data-toggle="tab" href="#lg2">
                            <h4> Update Flash Deal </h4>
                        </a>
                    </div>
                    <div id="lg2" class="tab-pane">
                        <div class="login-form-container">
                            <div class="login-register-form">
                                <form action="/tailor/updatedeal/{{deals.id}}?_method=PUT" method="post" id="updatedeal">
                                    <div class="form-group">
                                        <label for="name">Product Name</label>
                                        <input id="pname" name="pname" class="form-control" type="text" value="{{deals.pname}}" >
                                    </div>

                                    <div class="form-group">
                                        <label for="name">Discounted Price ($)</label>
                                        <input id="discountp" name="discountp" class="form-control" type="text" value="{{deals.discountp}}" >
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="name">Original Price ($)</label>
                                        <input id="originalp" name="originalp" class="form-control" type="text" value="{{deals.originalp}}" >
                                    </div>

                                    <div class="form-group">
                                        <label for="name">Start Date (DD/MM/YYYY)</label>
                                        <input id="dstartdate" name="dstartdate" class="form-control" type="text" value="{{deals.dstartdate}}" >
                                    </div>

                                    <div class="form-group">
                                        <label for="name">End Date (DD/MM/YYYY)</label>
                                        <input id="dexpirydate" name="dexpirydate" class="form-control" type="text" value="{{deals.dexpirydate}}" >
                                    </div>

                                    <div class="button-box">
                                        <button type="submit"><span>Confirm</span></button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
