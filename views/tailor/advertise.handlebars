<div class="container">
    <div class="custom-row-2">
        <div class="col-lg-4 col-md-5">
            <div class="contact-info-wrap">
                <div class="single-contact-info">
                    <div class="contact-icon">
                        <i class="fa fa-phone"></i>
                    </div>
                    <div class="contact-info-dec">
                        <p>+65 6123 4567</p>
                    </div>
                </div>
                <div class="single-contact-info">
                    <div class="contact-icon">
                        <i class="fa fa-envelope-o"></i>
                    </div>
                    <div class="contact-info-dec">
                        <p><a href="mailto:cs@tailornow.com">cs@tailornow.com</a></p>
                    </div>
                </div>
                <div class="single-contact-info">
                    <div class="contact-icon">
                        <i class="fa fa-comments-o"></i>
                    </div>
                    <div class="contact-info-dec">
                        <p>Already contacted us?</p>
                        <p>Visit your chatbox <a href="">here</a>.</p>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-8 col-md-7">
            <div class="contact-form">
                <div class="contact-title mb-30">
                    <h2>Advertise with us, at only a small fees</h2>
                </div>
                <form class="contact-form-style" action="" method="post" enctype=multipart/form-data>
                    <div class="row">
                        <div class="col-lg-6">
                            <label for="startdate">Start Date:*</label>
                            <input type="text" name="startdate" placeholder="Start Date"
                                value="{{request.form.startdate }}">
                        </div>
                        <div class="col-lg-6">
                            <label for="enddate">End Date:*</label>
                            <input type="text" name="enddate" placeholder="End Date" value="{{request.form.enddate }}">
                        </div>
                        <div class="col-lg-12">
                            <label for="image">Advertisement Image (capped at 16MB):*</label>
                            <form action="/upload" method="post" enctype="multipart/form-data">
                                <input type="file" accept="image" placholder="image" name="photo" input type="submit"
                                    value="{{request.form.image }}">
                            </form>
                            Recommended image resolution: 1920 x 800 pixels

                        </div>
                        <div class="col-lg-12">
                            <label for="adtext">Advertisement Text: (capped at 30 characters/optional)</label>
                            <input type="text" name="adtext" placeholder="adtext" value="{{request.form.adtext }}">
                            <br>
                        </div>
                        <div class="col-lg-12">
                            <button class="submit" type="submit" style="float: right;">Make Payment</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

