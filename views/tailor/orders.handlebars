<div class="cart-main-area pt-98 pb-100">
    <div class="container">
        <h3 class="cart-page-title">Your orders</h3>
        <div class="row">
            {{#if billingdetails}}
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="table-content table-responsive cart-table-content">
                    <table style=" margin-left: auto; margin-right: auto; width: 90%;">
                        <thead>
                            <tr>
                                <th>Due Date</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                {{#each billingdetails}}
                                {{#ifCond tstatus '==' "pending"}}
                                <td class="due-date">{{formatTime deliverydate 'DD MMM YYYY'}}</td>
                                <td class="customer-name">{{firstname}} {{lastname}}</td>
                                {{#each ../carts}}
                                {{#ifCond id '==' ../id}}
                                <td class="product-description">{{name}}</td>
                                <td class="product-price"><span class="amount">{{price}}</span></td>
                                <td class="quantity">{{quantity}}</td>
                                {{/ifCond}}
                                {{/each}}
                                <td class="product-wishlist-cart">
                                    <form action="/tailor/completedorder/{{id}}?_method=PUT" method="post"
                                        id="acceptForm">
                                        <input type="hidden" name="_method" value="PUT">
                                        <input class="button button1" type="submit" name="upvote"
                                            value="Click here if done" />
                                    </form>                             
                                </td>
                            </tr>
                            {{/ifCond}}
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
            {{else}}
            <div style="margin-left:16px;">You do not have any orders.</div>
            {{/if}}
        </div>
    </div>
</div>
<style>
    .button {
        border: 5px solid white;
        border-radius: 35px;
        color: white;
        padding-right: 8px;
        padding-left: 8px;
        text-align: center;
        font-size: 14px;
        margin: -10px;
        transition-duration: 0.5s;
        cursor: pointer;
    }

    .button1 {
        background-color: rgb(170, 88, 252);
        color: white;
    }

    .button1:hover {
        background-color: black;
        color: white;
    }
</style>

<script>
    $.ajax({
        url: window.location.href,
        headers: {
            "Pragma": "no-cache",
            "Expires": -1,
            "Cache-Control": "no-cache"
        }
    }).done(function () {
        window.location.reload(true);
    });
</script>
