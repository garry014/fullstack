<div class="contact-area pt-100 pb-100">
    <div class="container">

        <div class="custom-row-2">
            <div class="col-lg-8 col-md-7">
                <div class="contact-form">
                    <div class="contact-title mb-30">

                    </div>
                    <form class="contact-form-style" id="updatecourse" action="/tailor/updatecourse/{{course.id}}?_method=PUT" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-12">
                                <label for="title">Course Title:</label>
                                <input name="title" placeholder="Course Title*" type="text" class="form-control" value="{{course.title}}" required>
                            </div>
                            <div class="col-lg-12">
                                <label for="language">Language:</label>
                                <select id="language" name="language">
                                    <option value="english">English</option>
                                    <option value="mandarin">Mandarin</option>
                                </select>
                            </div>
                            <br><br><br>
                            <div class="col-lg-12">
                                <label for="day">Day:</label>
                                <select id="day" name="day">
                                    <option value="monday">Monday</option> 
                                    <option value="tuesday">Tuesday</option>
                                    <option value="wednesday">Wednesday</option>
                                    <option value="thursday">Thursday</option>
                                    <option value="friday">Friday</option>
                                    <option value="saturday">Saturday</option>
                                    <option value="sunday">Sunday</option>
                                </select>
                            </div>
                            <br><br><br>

                            <label for="materialsneeded">Materials Needed:</label>
                            <div class="col-lg-12">
                                <textarea name="material" placeholder="Materials Needed*">{{course.material}}</textarea>
                            </div>

                            <label for="description">Description:</label>
                            <div class="col-lg-12">
                                <textarea name="description" placeholder="Course Description*"  >{{course.description}}</textarea>
                            </div>

                            <label for="price">Price:</label>
                            <div class="col-lg-12">
                                <input name="price" placeholder="Price*" type="text"  value="{{course.price}}">
                            </div>

                            
                            <!-- <div class="col-lg-12">
                                <label for="thumbnail" >Thumbnail:</label>
                                <input name="thumbnail" placeholder="Subject*" type="file">
                            </div> -->

                            <div class="col-lg-12">
                                <button class="submit" type="submit">SAVE</button>
                            </div>
                        </div>
                    </form>
                    <p class="form-messege"></p>
                </div>
            </div>
        </div>
    </div>
</div>