<div class="container">
    <div class="custom-row-2">
        <div class="col-lg-8 col-md-7" style="margin: auto;">
            <div class="contact-form">
                <div class="contact-title mb-30">
                    <h2>View all notification</h2>
                </div>
                {{#if notifications}}
                <!--NEW NOTIFICATIONS-->
                {{#each notifications}}
                {{#ifCond status '==' "Unread"}}
                <div onclick="location.href='/{{hyperlink}}';" class="notification-inner">

                    <div style="position: relative; float: right;">
                        <a href="/deleteNoti/{{id}}"><i class="fa fa-times" title="Delete this notification"></i></a>
                    </div>
                    {{message}}
                    <div style="font-size:10px">
                        <i class="fa fa-rss"></i>
                        {{time}}
                    </div>
                </div>
                

                {{else}}
                <!-- Alr Read Notifications -->
                <div onclick="location.href='/{{hyperlink}}';" class="notification-read">
                    <div style="position: relative; float: right;">
                        <a href="/deleteNoti/{{id}}"><i class="fa fa-times" title="Delete this notification"></i></a>
                    </div>
                    {{message}}
                    <div style="font-size:10px">
                        <i class="fa fa-rss"></i>
                        {{time}}
                    </div>
                </div>
                {{/ifCond}}
                {{/each}}

                {{else}}
                There is currently no notifications.
                {{/if}}



                <p class="form-messege"></p>
            </div>
        </div>
    </div>
</div>
<br>
