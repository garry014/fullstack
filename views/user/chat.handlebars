            </div>

            <div class="msg_history" id="msg_history">
                <br>
                <div class="incoming_msg">
                    <div class="incoming_msg_img"> <img src="https://ptetutorials.com/images/user-profile.png"
                            alt="sunil"> </div>
                    <div class="received_msg">
                        <div class="received_withd_msg">
                            <p><b>System Notice:</b> Please note that this tailor is able to speak english, mandarin, hokkien, able to read and write in mandarin only.</p>
                            <span class="time_date"> 18 May 2021 11:41 | Merlion Tailor</span>
                        </div>
                    </div>
                </div>
                {{#each messages}}
                    {{#if message}}
                        {{#ifCond sentby '==' ../currentuser}} 
                        <!-- Left/Recieved msg if recipient == current user -->
                        <div class="outgoing_msg">
                            <div class="sent_msg">
                                <p>{{message}}</p>
                                <span class="time_date">{{timestamp}} | me</span>
                            </div>
                        </div>
                        {{else}}
                        <!-- Right/Sent msg if sender == current user-->
                        <div class="incoming_msg">
                            <div class="incoming_msg_img"> <img src="https://ptetutorials.com/images/user-profile.png"
                                    alt="sunil"> </div>
                            <div class="received_msg">
                                <div class="received_withd_msg">  
                                    <p>{{message}}</p>
                                    <span class="time_date">{{timestamp}} | {{sentby}}</span>
                                </div>
                            </div>
                        </div>
                        {{/ifCond}}
                    {{else}}
                        {{#ifCond sentby '==' ../currentuser}}
                        <div class="outgoing_msg">
                            <div class="sent_msg">
                                <p><img id="myImg" src="/uploads/chat/{{upload}}" width="200px" height="auto" alt="{{upload}}" title="Click to enlarge"></p>
                                <span class="time_date">{{timestamp}} | me</span>
                            </div>
                        </div>
                        {{else}}
                        <div class="incoming_msg">
                            <div class="incoming_msg_img"> <img src="https://ptetutorials.com/images/user-profile.png"
                                    alt="sunil"> </div>
                            <div class="received_msg">
                                <div class="received_withd_msg">  
                                    <p><img id="myImg" src="/uploads/chat/{{upload}}" width="200px" height="auto" alt="{{upload}}" title="Click to enlarge"></p>
                                    <span class="time_date">{{timestamp}} | {{sentby}}</span>
                                </div>
                            </div>
                        </div>
                        {{/ifCond}}
                    {{/if}}
                {{/each}}
                

                <div class="outgoing_msg">
                    <div class="sent_msg">
                        {{!-- id needs to be unique / js part need repicate also --}}
                        <p><img id="myImg" src="https://remake.world/wp-content/uploads/2020/04/Hem-7.jpg" width="200px"
                                height="auto" alt="Screenshot" title="Click to enlarge"></p>
                        <span class="time_date"> 18 May 2021 12:11 | me</span>
                    </div>
                </div>

                <div class="outgoing_msg">
                    <div class="sent_msg">
                        <p><audio controls="" id="audioPlayer" src="/testdata.oga" type="audio/oga">Your browser does not support the audio element.</audio></p>
                        <span class="time_date"> 18 May 2021 12:11 | me</span>
                    </div>
                </div>
            </div>
