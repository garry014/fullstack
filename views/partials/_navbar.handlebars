    <script>
        var action = 0;

        function clear_new() {
            if (action == 1) {
                action = 2;
                location.href = "{{ url_for('update_notification', action="readall", id=0) }}";
            } else {
                action = 1;
                document.getElementById("new_noti").style.display = 'none';
            }
        }
    </script> --}}
</header>
