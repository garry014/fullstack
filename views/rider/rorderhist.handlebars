<div class="breadcrumb-area pt-35 pb-35 bg-gray-3">
    <div class="container">
        <div class="breadcrumb-content text-center">
            <ul>
                <li>
                    <a href="index.html">Home</a>
                </li>
                <li class="active">Orders History </li>
            </ul>
        </div>
    </div>
</div>
<div class="cart-main-area pt-90 pb-100">
    <div class="container">
        <h3 class="cart-page-title">Overview of Orders</h3>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-12">
                <form action="/rider/riderhist/{{User.id}}?_method=PUT" method="post" enctype="multipart/form-data">
                    <div class="table-content table-responsive cart-table-content">
                        <table>
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Destination</th>
                                    <th>Pick Up Location</th>
                                    <th>Customer Name</th>
                                    <th>Delivery Price</th>
                                    <th>Order Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#ifCond Rider.id '==' id}}
                                {{#each RidersOrders}}
                                <tr>
                                    {{!-- <td class="product-thumbnail">
                                        <a href="#"><img src="assets/img/cart/cart-1.png" alt=""></a>
                                    </td> --}}
                                    <td class="product-name">{{id}}</td>
                                    <td class="product-name">{{des_address}}</td>
                                    <td class="product-price-cart"><span class="amount">{{pickup_address}}</span></td>
                                    <td class="product-price-cart">{{cust_username}}</td>
                                    <td class="product-quantity">{{deliveryfee}}</td>
                                    <td class="product-wishlist-cart">
                                        <a href="/rider/rideroutecheck/{{id}}">{{OrderStatus}}</a>
                                    </td>
                                </tr>
                                {{/each}}
                                {{/ifCond}}
                            </tbody>
                        </table>
                    </div>
                </form>
            </div>
        </div>
        <br>

    </div>
</div>
